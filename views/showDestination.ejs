<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head.ejs') %>
        <link rel="stylesheet" href="/styles/showDestination.css" />
</head>

<body>
    <%- include ('./partials/nav.ejs') %>
        <div class="flex-container">
            <div id="destination">
                <img src=<%=destination.img %> width="300"/>
                <h1>
                    <%=destination.name%>
                </h1>
                <p>
                     <%= destination.description %>
                </p>
               <p>
                 Best Time to Visit: <%= destination.timeOfYear %>
               </p>
               <p>
                Miles Round Trip: <%= destination.mileage %><br>
                Difficulty: <%= destination.difficulty %><br>
                Terrain: <%= destination.roadTerrain %>
               </p>
            </div>
            <a href="/destination/<%= destination._id %>/edit"><button>Edit Destination</button></a>
            <form action="/destination/<%= destination._id %>?_method=DELETE" method="POST">
            <button class="delete" type="submit">DELETE</button>
            </form>

        </div>
        
</body>
<script>

    const destinationMenu = document.getElementById("locations-menu")
        const destinationBtn = document.getElementById("location-btn")

     destinationBtn.addEventListener('click', (e) => {
            if (e.target.innerText === 'Hide Menu') {
                locationMenu.classList.remove('open-menu')
                locationMenu.classList.add('close-menu')
                locationBtn.innerText = "Show Menu"
            } else if (e.target.innerText === 'Show Menu') {
                locationMenu.classList.add('open-menu')
                locationMenu.classList.remove('close-menu')
                locationBtn.innerText = "Hide Menu"
            }
        })
</script>

</html>