<!DOCTYPE html>
<html>

<head>
    <%- include ("./partials/head.ejs") %>
        <link rel="stylesheet" href="/styles/home.css">
</head>

<body>
    <h1 id="home-title">California Cruisin</h1>
    <h2>Check out some local rides</h2>
        <div class="flex-container">
            <form action="/user" method="POST">
                <input type="text" name="firstName" placeholder="First Name" required />
                <input type="text" name="lastName" placeholder="Last Name" required />
                <input type="text" name="typeOfMotorcycle" placeholder="Type of Motorcycle?" required />
                <input type="text" name="img" placeholder="Place Image of Bike Link Here" />
                <input type="number" name="yearsRiding" value="14" />
                <input type="number" name="bikesOwned" value="2" />
                <input type="text" name="experience" placeholder="Whats your Level of Experience" />
                <button type="submit">Create User</button>
            </form>

        </div>

        <div id="flex-grid">
            <% for (let destination of destinations) { %>
                <a href="/destination/<%= destination._id %>">
                    <figure class="destination-card">
                        <img alt="<%= destination.name %>" src="<%= destination.img%>" width="300">
                        <figcaption>
                            <h2>
                                <%=destination.name%>
                            </h2>
                            <h4>
                                <%= destination.description %>
                            </h4>
                        </figcaption>
                    </figure>
                </a>
                <% } %>
                <button type="submit"><a href="/destination/new">Add Destination!</a></button>
        </div>


   